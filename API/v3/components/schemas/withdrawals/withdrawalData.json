{
	"required": [
		"order",
		"customer",
		"date",
		"content",
		"createdByAdmin"
	],
	"type": "object",
	"properties": {
		"order": {
			"$ref": "./orderDetails.json"
		},
		"customer": {
			"$ref": "./customerDetails.json"
		},
		"date": {
			"type": "string",
			"format": "datetime",
			"pattern": "^\\d{4}-\\d{2}-\\d{2}(\\s\\d{2}:\\d{2}:\\d{2})?$",
			"example": "2020-04-15 14:30:35"
		},
		"content": {
			"type": "string",
			"example": "Hiermit widerrufe ich ..."
		},
		"createdByAdmin": {
			"type": "boolean",
			"example": true
		}
	}
}