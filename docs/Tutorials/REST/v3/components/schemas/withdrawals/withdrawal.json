{
	"required": [
		"id",
		"order",
		"customer",
		"date",
		"content",
		"createdByAdmin",
		"createdOn"
	],
	"type": "object",
	"properties": {
		"id": {
			"type": "integer",
			"format": "int32",
			"example": 1,
			"minimum": 1
		},
		"order": {
			"$ref": "./orderDetails.json"
		},
		"customer": {
			"$ref": "./customerDetails.json"
		},
		"date": {
			"type": "string",
			"pattern": "^\\d{4}-\\d{2}-\\d{2}(\\s\\d{2}:\\d{2}:\\d{2})?$",
			"example": "2020-04-15 14:30:35"
		},
		"content": {
			"type": "string",
			"example": "Hiermit widerrufe ich ..."
		},
		"createdByAdmin": {
			"type": "boolean",
			"example": true
		},
		"createdOn": {
			"type": "string",
			"pattern": "^\\d{4}-\\d{2}-\\d{2}(\\s\\d{2}:\\d{2}:\\d{2})?$",
			"example": "2020-04-15 14:30:35",
			"nullable": true
		}
	}
}