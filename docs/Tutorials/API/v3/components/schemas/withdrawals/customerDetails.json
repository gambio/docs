{
	"required": [
		"id",
		"gender",
		"firstName",
		"lastName",
		"address",
		"email"
	],
	"type": "object",
	"properties": {
		"id": {
			"type": "integer",
			"format": "int32",
			"example": 1,
			"minimum": 1,
			"nullable": true
		},
		"gender": {
			"type": "string",
            "description": "Determines the gender of the customer. `m` for male, `f` for female, and `o` for other.",
			"enum": ["m", "f", "o", ""],
			"example": "o"
		},
		"firstName": {
			"type": "string",
			"example": "John"
		},
		"lastName": {
			"type": "string",
			"example": "Doe"
		},
		"address": {
			"$ref": "./customerAddress.json"
		},
		"email": {
			"type": "string",
			"example": "admin@example.org"
		}
	}
}